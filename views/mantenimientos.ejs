<!doctype html>
<html lang="es" data-bs-theme="light">

<head>
  <meta charset="utf-8" />
  <title>Dashboard â€“ Mantenimientos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Inter", sans-serif;
      background-color: var(--bs-body-bg);
      transition: background-color .3s ease, color .3s ease;
    }

    /* ------ SIDEBAR ------ */
    .sidebar {
      width: 240px;
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      background: var(--bs-dark-bg-subtle);
      border-right: 1px solid var(--bs-border-color);
      padding-top: 1rem;
      transition: background-color .3s;
    }

    .sidebar .logo {
      font-size: 1.5rem;
      font-weight: 6000;
      text-align: center;
      padding-bottom: 1rem;
    }

    .sidebar .nav-link {
      padding: 0.7rem 1.2rem;
      font-size: 0.92rem;
      display: flex;
      gap: 10px;
      align-items: center;
      border-radius: 0.45rem;
      transition: background-color .2s;
    }

    .sidebar .nav-link:hover {
      background-color: rgba(90, 126, 255, 0.15);
    }

    .sidebar .nav-link.active {
      background-color: #4e73df;
      color: white !important;
      font-weight: 600;
    }

    /* ------ MAIN CONTENT ------ */
    .content {
      margin-left: 240px;
      padding: 1.8rem;
      min-height: 100vh;
    }

    .page-title {
      font-size: 1.6rem;
      font-weight: 700;
    }

    /* ------ NAVBAR SUPERIOR ------ */
    .topbar {
      height: 60px;
      background: var(--bs-body-bg);
      border-bottom: 1px solid var(--bs-border-color);
      display: flex;
      justify-content: flex-end;
      align-items: center;
      padding: 0 1.5rem;
      position: fixed;
      left: 240px;
      right: 0;
      top: 0;
      z-index: 10;
    }

    /* ------ TARJETA ------ */
    .card {
      border: none;
      border-radius: 0.7rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.07);
      transition: background-color .3s;
    }

    /* ------ TABLA ------ */
    .table thead th {
      background-color: var(--bs-tertiary-bg);
      font-size: 0.78rem;
      text-transform: uppercase;
      letter-spacing: .04em;
    }

    .table tbody tr:hover {
      background-color: rgba(80, 80, 255, 0.06);
      transition: background-color .2s;
    }

    /* ------ SWITCH MODO OSCURO ------ */
    .switch-theme {
      display: flex;
      align-items: center;
      gap: 8px;
      cursor: pointer;
      font-size: 1rem;
    }

    footer {
      margin-left: 240px;
    }

    /* estilos adicionales para la tabla y otros elementos */
    .toolbar .form-label {
      font-size: 0.8rem;
      margin-bottom: 0.15rem;
    }

    .toolbar .form-control,
    .toolbar .form-select {
      min-width: 160px;
      padding: 0.25rem 0.5rem;
      font-size: 0.85rem;
      height: calc(1.5em + 0.5rem + 2px);
    }

    .btn-compact {
      padding: 0.3rem 0.7rem;
      font-size: 0.8rem;
      line-height: 1.2;
    }

    .btn-filter {
      padding: 0.4rem 1rem;
      font-size: 0.85rem;
    }

    .table thead th {
      white-space: nowrap;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: .03em;
      background-color: var(--bs-tertiary-bg);
    }

    .table {
      --bs-table-cell-padding-y: 0.4rem;
      --bs-table-cell-padding-x: 0.5rem;
    }

    .table td {
      vertical-align: middle;
      font-size: 0.85rem;
    }

    .table-card {
      border-radius: 0.375rem;
      box-shadow: 0 0.1rem 0.35rem rgba(15, 23, 42, 0.05);
      border: 1px solid var(--bs-border-color);
      overflow: hidden;
    }

    .table tbody tr:hover {
      background-color: rgba(80, 80, 255, 0.06);
    }

    .col-acciones {
      text-align: center;
      white-space: nowrap;
    }

    .col-acciones .btn {
      margin-bottom: 0.1rem;
    }

    .preview-img {
      max-height: 100px;
      border-radius: 8px;
      display: block;
      margin-top: 4px;
    }
  </style>
</head>


<body>

  <!-- SIDEBAR -->
  <aside class="sidebar">
    <div class="logo mb-3">
      <img src="/img/logo.png" style="height:40px" class="mb-2 rounded"><br>
      PDS-001
    </div>

    <nav class="nav flex-column px-2">
      <a href="/equipos" class="nav-link"><i class="bi bi-hdd"></i> Equipos</a>
      <a href="/ubicaciones" class="nav-link"><i class="bi bi-geo-alt"></i> Ubicaciones</a>
      <a href="/responsables-custodios" class="nav-link"><i class="bi bi-people"></i> Responsables</a>
      <a href="/personas-mantenimiento" class="nav-link"><i class="bi bi-person-badge"></i> Personas</a>
      <a href="/cargos" class="nav-link"><i class="bi bi-briefcase"></i> Cargos</a>
      <a href="/mantenimientos" class="nav-link active"><i class="bi bi-wrench"></i> Mantenimientos</a>

      <% if (currentUser && currentUser.role==='admin' ) { %>
        <a href="/usuarios" class="nav-link"><i class="bi bi-shield-lock"></i> Usuarios</a>
        <% } %>

          <a href="/mi-perfil" class="nav-link"><i class="bi bi-person-circle"></i> Mi perfil</a>
    </nav>
  </aside>


  <!-- TOPBAR -->
  <div class="topbar">
    <div class="switch-theme me-4">
      <input type="checkbox" id="themeToggle">
      <label for="themeToggle" class="m-0">ðŸŒ™</label>
    </div>

    <% if (currentUser) { %>
      <span class="text-muted me-3 small">
        <strong>
          <%= currentUser.username %>
        </strong> | <%= currentUser.role %>
      </span>

      <form method="post" action="/logout">
        <button class="btn btn-outline-danger btn-sm">Salir</button>
      </form>
      <% } %>
  </div>


  <!-- CONTENIDO -->
  <main class="content pt-5 mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="page-title">Mantenimientos</h1>

      <div>
        <a href="/reportes/mantenimientos.xlsx" class="btn btn-success btn-sm shadow-sm me-2">
          <i class="bi bi-file-earmark-excel me-1"></i> Exportar Excel
        </a>
        <% if (currentUser && currentUser.role==='admin' ) { %>
          <button id="btnNuevo" class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nuevo mantenimiento
          </button>
          <% } %>
      </div>
    </div>

    <p class="text-muted">Registro y seguimiento de mantenimientos preventivos y correctivos.</p>


    <!-- FILTROS -->
    <div class="card mb-4">
      <div class="card-body row g-3 align-items-end">

        <div class="col-sm-6 col-lg-3">
          <label class="form-label">DescripciÃ³n</label>
          <input id="q" class="form-control" placeholder="Buscar en descripciÃ³n...">
        </div>

        <div class="col-sm-6 col-lg-3">
          <label class="form-label">CÃ³digo inventario</label>
          <input id="fCodigo" class="form-control" placeholder="EQ-0001" list="dl_fcodigos">
          <datalist id="dl_fcodigos"></datalist>
        </div>

        <div class="col-sm-6 col-lg-2">
          <label class="form-label">Tipo</label>
          <select id="fTipo" class="form-select"></select>
        </div>

        <div class="col-sm-6 col-lg-2">
          <label class="form-label">Prioridad</label>
          <select id="fPri" class="form-select"></select>
        </div>

        <div class="col-sm-6 col-lg-2">
          <label class="form-label">Resultado</label>
          <select id="fRes" class="form-select"></select>
        </div>

        <div class="col-sm-6 col-lg-3">
          <label class="form-label">Persona mantenimiento</label>
          <input id="fPersona" class="form-control" placeholder="ID / Apellidos / Nombres" list="dl_personas_filter">
          <datalist id="dl_personas_filter"></datalist>
        </div>

        <div class="col-sm-6 col-lg-3 ms-auto d-flex justify-content-end gap-2">
          <button id="btnLimpiar" class="btn btn-outline-secondary">Limpiar</button>
          <button id="btnFiltrar" class="btn btn-dark">Filtrar</button>
        </div>

      </div>
    </div>


    <!-- TABLA -->
    <div class="card">
      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle mb-0">
          <thead>
            <tr>
              <th>#</th>
              <th>Equipo</th>
              <th>Tipo</th>
              <th>Prioridad</th>
              <th>Programada</th>
              <th>EjecuciÃ³n</th>
              <th>PrÃ³x. venc.</th>
              <th>Resultado</th>
              <th>Responsable</th>
              <th>Adjunto</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>

          <tbody id="tbody">
            <% if (mantenimientos && mantenimientos.length) { %>
              <% mantenimientos.forEach(m=> { %>
                <tr>
                  <td>
                    <%= m.id %>
                  </td>
                  <td>
                    <%= m.Equipo ? (m.Equipo.codigo_inventario || ('#'+m.equipoId)) : ('#'+m.equipoId) %>
                  </td>
                  <td>
                    <%= m.tipo %>
                  </td>
                  <td>
                    <%= m.prioridad %>
                  </td>
                  <td>
                    <%= m.fecha_programada || '' %>
                  </td>
                  <td>
                    <%= m.fecha_ejecucion || '' %>
                  </td>
                  <td>
                    <%= m.proximo_vencimiento || '' %>
                  </td>
                  <td>
                    <%= m.resultado || '' %>
                  </td>
                  <td>
                    <% if (m.PersonaMantenimiento) { %>
                      <%= m.PersonaMantenimiento.identificacion %> â€”
                        <%= m.PersonaMantenimiento.apellidos %>,
                          <%= m.PersonaMantenimiento.nombres %>
                            <% } %>
                  </td>
                  <td>
                    <% if (m.adjunto_url) { %>
                      <% if (m.adjunto_url.endsWith('.pdf')) { %>
                        <a href="<%= m.adjunto_url %>" target="_blank" class="btn btn-sm btn-outline-dark">PDF</a>
                        <% } else { %>
                          <a href="<%= m.adjunto_url %>" target="_blank">
                            <img src="<%= m.adjunto_url %>" alt="Adjunto" class="preview-img">
                          </a>
                          <% } %>
                            <% } %>
                  </td>
                  <td class="text-center">
                    <% if (currentUser && currentUser.role==='admin' ) { %>
                      <button class="btn btn-sm btn-warning me-1" data-act="edit" data-id="<%= m.id %>">
                        <i class="bi bi-pencil"></i>
                      </button>
                      <button class="btn btn-sm btn-danger" data-act="del" data-id="<%= m.id %>">
                        <i class="bi bi-trash"></i>
                      </button>
                      <% } else { %>
                        <span class="text-muted small">Sin permisos</span>
                        <% } %>
                  </td>
                </tr>
                <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="11" class="text-center text-muted py-4">Sin registros</td>
                    </tr>
                    <% } %>
          </tbody>

        </table>
      </div>
    </div>


    <!-- MODAL -->
    <% if (currentUser && currentUser.role==='admin' ) { %>
      <div class="modal fade" id="modal">
        <div class="modal-dialog modal-lg">
          <form class="modal-content" id="form">

            <div class="modal-header">
              <h5 class="modal-title" id="title">Nuevo mantenimiento</h5>
              <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
              <input type="hidden" id="id">

              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">CÃ³digo inventario</label>
                  <input id="codigo_inventario" class="form-control" list="dl_codigos" required>
                  <datalist id="dl_codigos"></datalist>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Responsable</label>
                  <input id="persona_autocomplete" class="form-control" list="dl_personas_modal" required>
                  <datalist id="dl_personas_modal"></datalist>
                </div>

                <div class="col-md-4">
                  <label class="form-label">Tipo</label>
                  <select id="tipo" class="form-select" required></select>
                </div>

                <div class="col-md-4">
                  <label class="form-label">Prioridad</label>
                  <select id="prioridad" class="form-select" required></select>
                </div>

                <div class="col-md-4">
                  <label class="form-label">Resultado</label>
                  <select id="resultado" class="form-select"></select>
                </div>

                <div class="col-md-4">
                  <label class="form-label">Fecha programada</label>
                  <input type="datetime-local" id="fecha_programada" class="form-control">
                </div>

                <div class="col-md-4">
                  <label class="form-label">Fecha ejecuciÃ³n</label>
                  <input type="datetime-local" id="fecha_ejecucion" class="form-control">
                </div>

                <div class="col-md-4">
                  <label class="form-label">PrÃ³ximo vencimiento</label>
                  <input type="date" id="proximo_vencimiento" class="form-control">
                </div>

                <div class="col-12">
                  <label class="form-label">DescripciÃ³n</label>
                  <textarea id="descripcion" class="form-control" rows="2"></textarea>
                </div>

                <div class="col-12">
                  <label class="form-label">Observaciones</label>
                  <textarea id="observaciones" class="form-control" rows="2"></textarea>
                </div>

                <div class="col-12">
                  <label class="form-label">Adjunto</label>
                  <input type="file" id="adjunto_file" class="form-control" accept=".pdf,.jpg,.jpeg,.png">
                  <small class="text-muted">PDF, JPG o PNG (mÃ¡x. 5MB)</small>
                  <input type="hidden" id="adjunto_url">
                  <a id="adjunto_preview" href="#" target="_blank" class="d-none mt-2">Ver adjunto</a>
                </div>
              </div>
            </div>

            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button class="btn btn-primary" disabled>Guardar</button>
            </div>

          </form>
        </div>
      </div>
      <% } %>

        <div id="toastContainer" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

  </main>


  <footer class="py-3 text-center text-muted small border-top">
    Â© <%= new Date().getFullYear() %> USTA â€” Panel de gestiÃ³n de inventario y mantenimientos
  </footer>


  <script>
    // Exponer el rol del usuario para el JS
    window.USER_ROLE = "<%= currentUser ? currentUser.role : 'user' %>";
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/mantenimientos.js"></script>

  <!-- DARK MODE -->
  <script>
    const toggle = document.getElementById("themeToggle");
    const root = document.documentElement;

    const saved = localStorage.getItem("theme");
    if (saved) {
      root.setAttribute("data-bs-theme", saved);
      toggle.checked = saved === "dark";
    }

    toggle.addEventListener("change", () => {
      const theme = toggle.checked ? "dark" : "light";
      root.setAttribute("data-bs-theme", theme);
      localStorage.setItem("theme", theme);
    });
  </script>

</body>

</html>