  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Inter", sans-serif;
      background-color: var(--bs-body-bg);
      transition: background-color .3s ease, color .3s ease;
    }

    /* ------ SIDEBAR ------ */
    .sidebar {
      width: 240px;
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      background: var(--bs-dark-bg-subtle);
      border-right: 1px solid var(--bs-border-color);
      padding-top: 1rem;
      transition: background-color .3s;
    }

    .sidebar .logo {
      font-size: 1.5rem;
      font-weight: 600;
      text-align: center;
      padding-bottom: 1rem;
    }

    .sidebar .nav-link {
      padding: 0.7rem 1.2rem;
      font-size: 0.92rem;
      display: flex;
      gap: 10px;
      align-items: center;
      border-radius: 0.45rem;
      transition: background-color .2s;
      color: var(--bs-body-color);
    }

    .sidebar .nav-link:hover {
      background-color: rgba(90, 126, 255, 0.15);
    }

    .sidebar .nav-link.active {
      background-color: #4e73df;
      color: white !important;
      font-weight: 600;
    }

    /* ------ MAIN CONTENT ------ */
    .content {
      margin-left: 240px;
      padding: 1.8rem;
      min-height: 100vh;
    }

    .page-title {
      font-size: 1.6rem;
      font-weight: 700;
    }

    /* ------ NAVBAR SUPERIOR ------ */
    .topbar {
      height: 60px;
      background: var(--bs-body-bg);
      border-bottom: 1px solid var(--bs-border-color);
      display: flex;
      justify-content: flex-end;
      align-items: center;
      padding: 0 1.5rem;
      position: fixed;
      left: 240px;
      right: 0;
      top: 0;
      z-index: 10;
    }

    /* ------ TARJETA ------ */
    .card {
      border: none;
      border-radius: 0.7rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.07);
      transition: background-color .3s;
    }

    /* ------ TABLA ------ */
    .table thead th {
      background-color: var(--bs-tertiary-bg);
      font-size: 0.78rem;
      text-transform: uppercase;
      letter-spacing: .04em;
    }

    .table tbody tr:hover {
      background-color: rgba(80, 80, 255, 0.06);
      transition: background-color .2s;
    }

    .col-acciones {
      text-align: center;
      white-space: nowrap;
      width: 180px;
    }

    .preview-img {
      max-height: 100px;
      border-radius: 8px;
      display: block;
      margin-top: 4px;
    }

    /* ------ SWITCH MODO OSCURO ------ */
    .switch-theme {
      display: flex;
      align-items: center;
      gap: 8px;
      cursor: pointer;
      font-size: 1rem;
    }

    footer {
      margin-left: 240px;
      padding: 1rem 0;
      text-align: center;
      color: var(--bs-body-color);
    }
  </style>
</head>

<body class="bg-white">

