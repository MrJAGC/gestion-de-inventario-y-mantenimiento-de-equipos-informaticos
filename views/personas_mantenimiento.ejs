<!doctype html>
<html lang="es" data-bs-theme="light">

<head>
  <meta charset="utf-8" />
  <title>Personas de mantenimiento</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { padding: 0; font-size: 0.9rem; }
    .page-wrapper { max-width: 1400px; margin: 0 auto; }
    header.page-header { margin-bottom: 1rem; }
    header.page-header h1 { font-size: 1.15rem; }
    header.page-header p { font-size: 0.82rem; }
    .btn-compact { padding: 0.3rem 0.7rem; font-size: 0.8rem; line-height: 1.2; }
    .table thead th { white-space: nowrap; font-size: 0.8rem; text-transform: uppercase; letter-spacing: .03em; background-color: #f8f9fa; }
    .table { --bs-table-cell-padding-y: 0.4rem; --bs-table-cell-padding-x: 0.5rem; }
    .table td { vertical-align: middle; font-size: 0.85rem; }
    .table-card { border-radius: 0.375rem; box-shadow: 0 0.1rem 0.35rem rgba(15, 23, 42, 0.05); border: 1px solid #dee2e6; overflow: hidden; }
    .table tbody tr:hover { background-color: #f9fafb; }
    .col-acciones { text-align: center; white-space: nowrap; width: 160px; }
    .col-acciones .btn { margin-bottom: 0.1rem; }
  </style>
</head>

<body class="bg-white d-flex flex-column min-vh-100">

  <!-- NAVBAR SUPERIOR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center gap-2" href="/">
        <img src="/img/logo.png" alt="USTA" style="height:32px; width:auto;" class="rounded">
        <span>PDS-001</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/equipos">Equipos</a></li>
          <li class="nav-item"><a class="nav-link" href="/ubicaciones">Ubicaciones</a></li>
          <li class="nav-item"><a class="nav-link" href="/responsables-custodios">Responsables</a></li>
          <li class="nav-item"><a class="nav-link active" href="/personas-mantenimiento">Personas</a></li>
          <li class="nav-item"><a class="nav-link" href="/cargos">Cargos</a></li>
          <li class="nav-item"><a class="nav-link" href="/mantenimientos">Mantenimientos</a></li>
          <% if (currentUser && currentUser.role === 'admin') { %>
          <li class="nav-item"><a class="nav-link" href="/usuarios">Usuarios</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/mi-perfil"><i class="bi bi-person me-1"></i> Mi perfil</a></li>
        </ul>

        <% if (currentUser) { %>
        <span class="navbar-text me-3 text-muted small">
          Usuario: <strong><%= currentUser.username %></strong> |
          Rol: <strong><%= currentUser.role %></strong>
        </span>
        <form method="post" action="/logout" class="d-inline m-0">
          <button class="btn btn-outline-danger btn-sm">Salir</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="flex-grow-1">
    <div class="container-fluid py-3 px-4">
      <div class="page-wrapper">

        <!-- Header -->
        <header class="page-header d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h4 m-0">Personas de mantenimiento</h1>
            <p class="text-muted mb-0">
              Técnicos y proveedores internos/externos responsables de realizar mantenimientos a los equipos.
            </p>
          </div>
          <div>
            <% if (currentUser && currentUser.role === 'admin') { %>
            <button id="btnNuevo" class="btn btn-primary btn-compact">➕ Nueva persona</button>
            <% } %>
            <button id="btnExcel" class="btn btn-success btn-compact ms-2">Exportar Excel</button>
          </div>
        </header>

        <!-- Filtros -->
        <div class="card mb-3">
          <div class="card-body toolbar">
            <div class="row g-2 align-items-end">
              <div class="col-sm-6 col-lg-4">
                <label class="form-label">Buscar</label>
                <input id="q" type="text" class="form-control" placeholder="Identificación, nombres o apellidos...">
              </div>
              <div class="col-sm-6 col-lg-3 ms-auto d-flex justify-content-end gap-2 mt-2 mt-lg-0">
                <button id="btnLimpiar" class="btn btn-outline-secondary btn-filter">Limpiar</button>
                <button id="btnFiltrar" class="btn btn-dark btn-filter">Filtrar</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Tabla -->
        <div class="card table-card">
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Identificación</th>
                  <th>Nombres</th>
                  <th>Apellidos</th>
                  <th>Cargo</th>
                  <th>Email</th>
                  <th>Teléfono</th>
                  <th>Creado</th>
                  <th>Actualizado</th>
                  <th class="col-acciones">Acciones</th>
                </tr>
              </thead>
              <tbody id="tbody"><!-- se llena vía JS --></tbody>
            </table>
          </div>
        </div>

        <!-- Modal -->
        <% if (currentUser && currentUser.role === 'admin') { %>
        <div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <form class="modal-content" id="form">
              <div class="modal-header">
                <h5 class="modal-title" id="title">Nueva persona de mantenimiento</h5>
                <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
              </div>
              <div class="modal-body">
                <input type="hidden" id="id">

                <div class="mb-3">
                  <label class="form-label">Identificación</label>
                  <input id="identificacion" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Nombres</label>
                  <input id="nombres" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Apellidos</label>
                  <input id="apellidos" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Cargo</label>
                  <select id="cargoId" class="form-select">
                    <option value="">(Sin cargo)</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input id="email" type="email" class="form-control">
                </div>
                <div class="mb-3">
                  <label class="form-label">Teléfono</label>
                  <input id="telefono" class="form-control">
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-secondary btn-compact" data-bs-dismiss="modal" type="button">Cancelar</button>
                <button class="btn btn-primary btn-compact" type="submit">Guardar</button>
              </div>
            </form>
          </div>
        </div>
        <% } %>

        <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

      </div>
    </div>
  </main>

  <footer class="mt-auto py-2 border-top bg-light text-center text-body-secondary small">
    © <%= new Date().getFullYear() %> USTA – Módulo de gestión de inventario y registro de mantenimientos
  </footer>

<script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/personas_mantenimiento.js"></script>
</body>

</html>
